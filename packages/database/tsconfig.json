{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist"]
} 