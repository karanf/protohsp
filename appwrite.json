{
  "$id": "greenheart",
  "name": "Greenheart SEVIS Portal",
  "runtime": "node-18.0",
  "source": ".",
  "buildCommand": "bash apps/greenheart/appwrite-build.sh",
  "installCommand": "corepack enable && corepack prepare pnpm@latest --activate",
  "startCommand": "cd apps/greenheart && node_modules/.bin/next start -p $PORT",
  "environment": {
    "NEXT_PUBLIC_INSTANT_APP_ID": "$NEXT_PUBLIC_INSTANT_APP_ID",
    "INSTANT_ADMIN_TOKEN": "$INSTANT_ADMIN_TOKEN",
    "NODE_ENV": "production"
  }
}

